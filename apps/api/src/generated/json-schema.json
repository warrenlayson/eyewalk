{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "default": "Customer",
          "enum": ["Admin", "Customer"]
        },
        "Device": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Device"
          }
        }
      }
    },
    "DeviceMetadata": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "pulse": {
          "type": "integer"
        },
        "batteryLevel": {
          "type": "integer"
        },
        "responseTime": {
          "type": "integer"
        },
        "device": {
          "anyOf": [
            {
              "$ref": "#/definitions/Device"
            },
            {
              "type": "null"
            }
          ]
        },
        "caneUser": {
          "anyOf": [
            {
              "$ref": "#/definitions/CaneUser"
            },
            {
              "type": "null"
            }
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "CaneUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "DeviceMetadata": {
          "$ref": "#/definitions/DeviceMetadata"
        }
      }
    },
    "Device": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "bounded": {
          "type": "boolean",
          "default": false
        },
        "owner": {
          "anyOf": [
            {
              "$ref": "#/definitions/User"
            },
            {
              "type": "null"
            }
          ]
        },
        "metadata": {
          "$ref": "#/definitions/DeviceMetadata"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "user": {
      "$ref": "#/definitions/User"
    },
    "deviceMetadata": {
      "$ref": "#/definitions/DeviceMetadata"
    },
    "caneUser": {
      "$ref": "#/definitions/CaneUser"
    },
    "device": {
      "$ref": "#/definitions/Device"
    }
  }
}
