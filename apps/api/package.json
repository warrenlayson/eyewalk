{
  "name": "api",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts",
    "schema": "src/db/schema.prisma"
  },
  "scripts": {
    "docker:up": "docker-compose -f ../../docker-compose.yml -f ../../docker-compose.test.yml up -d",
    "docker:down": "docker-compose -f ../../docker-compose.yml -f ../../docker-compose.test.yml down",
    "pretest": "eslint && yarn docker:up &&  yarn migrate:test",
    "test": "jest --coverage -i",
    "start": "npm run build && fastify start -l info dist/src/app.js",
    "build": "tsc",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"tsc -w\" \"fastify start --ignore-watch=.ts$ -w -l info -P dist/src/app.js\"",
    "lint": "eslint src --fix",
    "migrate:test": "dotenv -e .env.test  -- yarn prisma migrate deploy",
    "schema:generate": "json2ts -i src/generated/ -o src/generated/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/session": "^8.0.0",
    "@prisma/client": "^3.11.1",
    "@sinclair/typebox": "^0.23.4",
    "connect-redis": "^6.1.3",
    "fastify": "^3.0.0",
    "fastify-argon2": "^1.0.0",
    "fastify-auth": "^1.1.0",
    "fastify-autoload": "^3.10.0",
    "fastify-cli": "^2.15.0",
    "fastify-cookie": "^5.6.0",
    "fastify-cors": "^6.0.3",
    "fastify-csrf": "^3.1.0",
    "fastify-helmet": "^7.0.1",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.1.2",
    "ioredis": "^5.0.2",
    "jest-mock-extended": "^2.0.4"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.18",
    "@types/node": "^17.0.23",
    "@types/tap": "^15.0.5",
    "concurrently": "^7.0.0",
    "config": "*",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.12.0",
    "fastify-tsconfig": "^1.0.1",
    "json-schema-to-typescript": "^10.1.5",
    "nodemon": "^2.0.15",
    "prisma": "^3.11.1",
    "prisma-json-schema-generator": "^2.0.8",
    "ts-node": "^10.7.0",
    "tsconfig": "*",
    "typescript": "^4.6.3"
  }
}
